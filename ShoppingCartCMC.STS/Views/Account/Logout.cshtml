@using Microsoft.Extensions.Configuration
@model ShoppingCartCMC.STS.Models.AccountViewModels.LogoutViewModel
@inject IConfiguration Config

@{
    string url_DealingHome = Config.GetValue<string>("AppSetting:Url_DealingHome");
}

<div class="logout-page">
    <div class="page-header">
        <h1>Logout</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>Would you like to logout of IdentityServer?</p>
            <form asp-action="Logout">
                <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary">Yes</button>
                    </div>
                </fieldset>
                <p>
                    <a href="@url_DealingHome">Go back</a>
                </p>
            </form>
        </div>
    </div>
</div>